@model TPA.ViewModel.AtestadoIndexViewModel

@{
    ViewBag.Title = "Excluir atestado de funcionário";
}

<h2>Excluir atestado de funcionário</h2>

<h3>Você tem certeza que deseja excluir este registro?</h3>

<div>
    <div class="text-right">
        @Html.ActionLink("Voltar à lista", "Index", null, new { @class = "btn btn-default" })
    </div>

</div>

<div class="container-fluid  spacer text-left">


    <hr />
    <dl class="dl-horizontal bordered spacer ">
        <dt>
            @Html.DisplayNameFor(model => model.Id)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Id)
        </dd>



        <dt>
            @Html.DisplayNameFor(model => model.NomeUsuario)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NomeUsuario)
        </dd>



        <dt>
            @Html.DisplayNameFor(model => model.Observacao)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Observacao)
        </dd>



        <dt>
            @Html.DisplayNameFor(model => model.DataInicial)
        </dt>

        <dd>
            @Model.DataInicial.Value.ToString("dd/MM/yyyy")
        </dd>




        <dt>
            @Html.DisplayNameFor(model => model.DataFinal)
        </dt>

        <dd>
            @Model.DataFinal.Value.ToString("dd/MM/yyyy")
        </dd>


    </dl>
    <hr />

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Excluir" class="btn btn-danger" />
            @Html.ActionLink("Voltar à lista", "Index", null, new { @class = "btn btn-primary" })
        </div>
    }
</div>
