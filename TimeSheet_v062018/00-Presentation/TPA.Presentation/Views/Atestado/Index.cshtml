@model IEnumerable<TPA.ViewModel.AtestadoIndexViewModel>

@{
    ViewBag.Title = "Atestados";
}



@section scripts
{
    <script type="text/javascript">
        $(function () {

            var $tblLista = $('#tblLista').DataTable(
            {
                pageLength: 10,
                lengthChange: false,
                columnDefs:
                [

                    { orderable: false, targets: [4, 5] }

                ],
                sDom: 'Bftp',
                stateSave: true,
                language:
                {
                    "url": "@Url.Content("~/Scripts/DataTables/Portuguese-Brasil.json")"
                },
                buttons: [
                    {
                        extend: 'excelHtml5',
                        exportOptions: {
                            columns: ':visible'
                        }
                    }
                ]
            });

        });
    </script>
}

<h2>Atestados</h2>







    <div class="row">
        <div class="col-sm-12  text-right" id="divBotoes">
            @Html.ActionLink("Adicionar", "Adicionar", null, new { @class = "btn btn-primary" })
        </div>
    </div>


<div class="sp-vertical">
    <table id="tblLista" class="table table-striped table-bordered tfw_grid">

        <thead>
            <tr>
                <th class="controles">
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NomeUsuario)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DataInicial)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DataFinal)
                </th>
                <th class="controles text-center"><span class="glyphicon glyphicon-download" title="download"></span></th>
                <th class="controles text-center"><span class="glyphicon glyphicon-remove" title="excluir"></span></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NomeUsuario)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataInicial)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataFinal)
                    </td>
                    <td class="text-center">
                        <a href="@(Url.Action("Download", "Atestado", new { id = item.Id}))" target="_blank"><span class="glyphicon glyphicon-download" title="download"></span></a>
                    </td>
                    <td class="text-center">
                        <a href="@(Url.Action("Delete", "Atestado", new { id = item.Id}))"><span class="glyphicon glyphicon-remove" title="excluir"></span></a>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>


