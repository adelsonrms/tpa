@model TPA.Domain.DomainModel.Perfil

@{
    ViewBag.Title = "Criar Perfil";
}

<h2>Perfil de usuário</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()


    <div >
        <div class="text-right">
            @Html.ActionLink("Voltar à lista", "Index", null, new { @class = "btn btn-default" })
        </div>
    </div>

    <div class="container-fluid bordered spacer" >
        <div class="form-horizontal">
            <fieldset>

                @Html.ValidationSummary(false, "Erros encontrados", new { @class = "text-danger" })


                <div class="form-group">
                    <div class="input-group">
                        @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label input-group-addon" })
                        @Html.TextBoxFor(model => model.Nome, new { @class = "form-control" })
                    </div>
                    @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                </div>

                <div class="form-group  text-right">
                    <input type="submit" value="Criar" class="btn btn-primary" />
                </div>
            </fieldset>

        </div>
    </div>

}

