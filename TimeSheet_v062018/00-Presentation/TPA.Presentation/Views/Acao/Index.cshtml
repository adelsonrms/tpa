@model IEnumerable<TPA.Domain.DomainModel.Acao>

@{
    ViewBag.Title = "Ações de usuário";
}



@section scripts
{
    <script type="text/javascript">
        $(function () {

            var $tblLista = $('#tblLista').DataTable(
            {
                pageLength: 10,
                lengthChange: false,
                columnDefs:
                [

                    { orderable: false, targets: [2, 3] }

                ],
                sDom: 'Bftp',
                stateSave: true,
                language:
                {
                    "url": "@Url.Content("~/Scripts/DataTables/Portuguese-Brasil.json")"
                },
                buttons: [
                    {
                        extend: 'excelHtml5',
                        exportOptions: {
                            columns: ':visible'
                        }
                    }
                ]
            });

        });
    </script>
}

<h2>Ações de usuário</h2>





@using (Html.BeginForm("ImportarDoAssembly", "Acao"))
{
    @Html.AntiForgeryToken()

    <div class="row" id="divBotoes">
        <div class="col-sm-8  text-left" >
            <div class="form-check">
                <input type="checkbox" class="form-check-input" id="atualizarDescricoes" name="atualizarDescricoes" value="true" >
                <label class="form-check-label" for="atualizarDescricoes">Atualizar nomes e descrições de ações no banco de dados com informações do Assembly</label>
            </div>
        </div>
        <div class="col-sm-4 text-right">
            <input type="submit" value="Importar Ações do Sistema" class="btn btn-warning" />&nbsp;
            @Html.ActionLink("Criar", "Create", null, new { @class = "btn btn-primary" })
        </div>
    </div>
}

<div class="sp-vertical">
    <table id="tblLista" class="table table-striped table-bordered tfw_grid">

        <thead>
            <tr>
                <th class="controles">
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th class="controles text-center"><span class="glyphicon glyphicon-edit"></span></th>
                <th class="controles text-center"><span class="glyphicon glyphicon-remove"></span></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td class="text-center">
                        <a href="@(Url.Action("Edit", "Acao", new { id = item.Id}))"><span class="glyphicon glyphicon-edit"></span></a>
                    </td>
                    <td class="text-center">
                        <a href="@(Url.Action("Delete", "Acao", new { id = item.Id}))"><span class="glyphicon glyphicon-remove"></span></a>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>


