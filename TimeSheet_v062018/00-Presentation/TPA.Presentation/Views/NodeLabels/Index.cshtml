@model IEnumerable<TPA.Domain.DomainModel.NodeLabel>

@{
    ViewBag.Title = "Rótulos dos níveis de projetos";
}

@section scripts
{
    <script type="text/javascript">
        $(function () {

            var $tblLista = $('#tblLista').DataTable(
            {
                pageLength: 10,
                lengthChange: false,
                columnDefs:
                [

                    { orderable: false, targets: [2, 3] }

                ],
                sDom: 'Bftp',
                stateSave: true,
                language:
                {
                    "url": "@Url.Content("~/Scripts/DataTables/Portuguese-Brasil.json")"
                },
                buttons: [
                    {
                        extend: 'excelHtml5',
                        exportOptions: {
                            columns: ':visible'
                        }
                    }
                ]
            });

        });
    </script>
}

<h2>Rótulos dos níveis de projeto</h2>


<div class="row">
    <div class="col-sm-12  text-right" id="divBotoes">
        @Html.ActionLink("Criar", "Create", null, new { @class = "btn btn-primary" })
    </div>
</div>

<div class="sp-vertical">
    <table id="tblLista" class="table table-striped table-bordered tfw_grid">
        <thead>
            <tr>
                <th class="controles">
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th class="controles text-center"><span class="glyphicon glyphicon-edit"></span></th>
                <th class="controles text-center"><span class="glyphicon glyphicon-remove"></span></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td class="text-center">
                        <a href="@(Url.Action("Edit", "NodeLabels", new { id = item.Id}))"><span class="glyphicon glyphicon-edit"></span></a>
                    </td>
                    <td class="text-center">
                        <a href="@(Url.Action("Delete", "NodeLabels", new { id = item.Id}))"><span class="glyphicon glyphicon-remove"></span></a>
                    </td>
                </tr>
            }
        </tbody>



    </table>

</div>

