@model TPA.Domain.DomainModel.Usuario

@{
    ViewBag.Title = "Adicionar Usuários";
}

<h2>Adicionar Usuários</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <div >
        <div class="text-right">
            @Html.ActionLink("Voltar à lista", "Index", null, new { @class = "btn btn-default" })
        </div>
    </div>

    <div class="container-fluid bordered spacer" >
        <div class="form-horizontal">
            <fieldset>
                @Html.ValidationSummary(false, "Erros encontrados", new { @class = "text-danger" })

                <div class="form-group">
                    <div class="input-group">
                        @Html.LabelFor(model => model.Login, htmlAttributes: new { @class = "control-label input-group-addon" })
                        @Html.TextBoxFor(model => model.Login, new { @class = "form-control" })
                    </div>

                    @Html.ValidationMessageFor(model => model.Login, "", new { @class = "text-danger" })

                </div>


                @*<div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon ">@Html.CheckBox("Administrativo", @Model.Administrativo ?? false)</span>
                        @Html.LabelFor(model => model.Administrativo, htmlAttributes: new { @class = "form-control" })
                    </div>
                    @Html.ValidationMessageFor(model => model.Administrativo, "", new { @class = "text-danger" })
                </div>*@

                <div class="form-group  text-right">
                    <input type="submit" value="Adicionar" class="btn btn-primary" />
                </div>

            </fieldset>

        </div>
    </div>


}

