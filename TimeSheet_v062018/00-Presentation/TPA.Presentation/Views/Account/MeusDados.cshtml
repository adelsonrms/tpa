@model TPA.ViewModel.MeusDadosViewModel

@{
    ViewBag.Title = "Meus Dados";
}



@section scripts
{

    <script>
        $(function () {
            $("#Celular").mask("(00) 0000-00009");
        });
    </script>

}

<h2>MeusDados</h2>




@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container-fluid bordered spacer">
        <div class="form-horizontal">
            <h4>Funcionario</h4>
            <hr />

            @Html.ValidationSummary(false, "Erros encontrados", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)

            <div class="row sp-vertical">
                <div class="col-sm-6">

                    <div class="input-group">
                        @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label input-group-addon" })
                        @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control"} })

                    </div>
                    @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                </div>

                <div class="col-sm-6">

                    <div class="input-group">
                        @Html.LabelFor(model => model.Celular, htmlAttributes: new { @class = "control-label input-group-addon" })
                        @Html.EditorFor(model => model.Celular, new { htmlAttributes = new {Id="Celular", @class = "form-control" } })

                    </div>
                    @Html.ValidationMessageFor(model => model.Celular, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row sp-vertical">
                <div class="col-sm-12">

                    <div class="input-group">
                        @Html.LabelFor(model => model.EmailProfissional, htmlAttributes: new { @class = "control-label input-group-addon" })
                        @Html.EditorFor(model => model.EmailProfissional, new { htmlAttributes = new { @class = "form-control" } })

                    </div>
                    @Html.ValidationMessageFor(model => model.EmailProfissional, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="row sp-vertical">
                <div class="col-sm-12 text-right">
                    <input type="submit" value="Salvar" class="btn btn-primary" />
                </div>
            </div>

            </div>
    </div>
    

}

